<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="default" extends="struts-default">
	
        <default-action-ref name="index" />

        <global-results>
        	<result name="INDEX">index.jsp</result>
            <result name="ERROR">error.jsp</result>
			<result name="FAIL">home.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="ERROR"/>
            <exception-mapping exception="java.sql.SQLException" result="ERROR"/>
            <exception-mapping exception="java.lang.ClassNotFoundException" result="ERROR"/>
        </global-exception-mappings>
        
        <action name="index" class="com.service.Index"></action>
        
        <action name="logIn" class="com.service.Login">
        	<result>home.jsp</result>
        </action>
        
        <action name="toSignUp" class="com.service.Index">
        	<result>signup.jsp</result>
        </action>
        
        <action name="signUp" class="com.service.Signup">
        	<result>home.jsp</result>
        </action>
        
        
        <!--  TODO --> 
        
        <action name="addFriend" class="com.service.Index">
        	<result>home.jsp</result>
        </action>
        
        <action name="addGroup" class="com.service.Index">
        	<result>home.jsp</result>
        </action>
        
        <action name="createGroup" class="com.service.Index">
        	<result>home.jsp</result>
        </action>
        
        <action name="createQuiz" class="com.service.Index">
        	<result>home.jsp</result>
        </action>
        
    </package>
</struts>
